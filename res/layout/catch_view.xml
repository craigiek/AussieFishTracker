<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="10dp">
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingBottom="5dp">
    <TextView android:id="@+id/catch_species_text"
              android:textSize="14dip"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:paddingLeft="5dip"
              android:layout_weight="3">
    </TextView>
    <TextView android:id="@+id/catch_date_text"
              android:textSize="12dip"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_weight="1">
    </TextView>
  </LinearLayout>
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
    <ImageView android:id="@+id/catch_image"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:paddingLeft="20dp"
               android:contentDescription="fish_pic">
    </ImageView>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="10dp">
      <TextView android:id="@+id/catch_weight_text"
                android:textSize="12dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black">
      </TextView>
      <TextView android:id="@+id/catch_location_text"
                android:textSize="12dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black">
      </TextView>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>